/*提交按钮*/
function confirm(){
	var name = $('#name').val();
	var card = $('#card').val();
	var phone = $('#phone').val();
	var veri = $('#verification').val();
		if(name=='' || card=='' || phone=='' || veri==''){
			console.log("信息错误");
			$('#msg').removeClass('invisible');
		}
		else{
			console.log("信息完整");
			$('#msg').addClass('invisible');
		}
}
