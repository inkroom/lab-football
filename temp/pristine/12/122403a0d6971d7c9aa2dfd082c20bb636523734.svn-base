<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<c:set var="path" value="${path}"/>
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
		<title>完善个人信息</title>
		<link rel="stylesheet" href="${path}/resources/lib/bootstrap/bootstrap.min.css"/>
		<link rel="stylesheet" type="text/css" href="${path}/resources/css/referee/public.css">
		<link rel="stylesheet" type="text/css" href="${path}/resources/css/referee/perferInfo.css">
	</head>
	<body>
		<!--导航-->
		<nav class="nav-bg navbar">
			<div class="container">
				<div class="logo-w col-lg-4 col-md-5 col-sm-11 col-xs-12">
					<img src="${path}/resources/img/logo.png"/>
					<span>四川省青少年校园足球信息网</span>
				</div>
			</div>
		</nav>
		<!--完善个人信息-->
		<div class="container cont-top">
			<div class="row text-center">
				<h3>完善个人信息</h3>
			</div>
		</div>
		
		<div class="row text-center">
	  		<div class="col-xs-12 font-color invisible" id="msg">信息错误</div>
	  	</div>
		
  			<div class="panel-body " >
  				<div class="container">
  					<div class="row text-center text-distance">
	  					<div class="col-xs-4 ">真实姓名：</div>
	  					<div class="col-xs-8">
	  						<input type="text" class="input-width" id="name" value="" />
	  					</div>
	  				</div>
	  				
	  				<div class="row text-center text-distance">
		  				<div class="col-xs-4">身份证号：</div>
		  				<div class="col-xs-8">
		  					<input type="number" class="input-width" id="card" value="" />
		  				</div>
	  				</div>
	  				
	  				<div class="row text-center text-distance">
		  				<div class="col-xs-4">手机号码：</div>
		  				<div class="col-xs-8">
		  					<input type="number" class="input-width" id="phone" value="" />
		  				</div>
	  				</div>
	  				
	  				<div class="row text-center text-distance">
		  				<div class="col-xs-4">验证码：</div>
		  				<div class="col-xs-5">
		  					<input type="text" class="input-width" id="verification" value="" />
		  				</div>
		  				<div class="col-xs-3">
		  					<input type="button" class="btn btn-success btn-xs radius center-block" id="confirm" onclick="send()" value="发送验证码" />
		  				</div>
	  				</div>
	  				
  				</div>
  			</div>
		
		<div>
			<input class="btn btn-success btn-lg radius center-block panel-distance" type="button" onclick="confirm()" value="确认提交">
		</div>
		<input type="hidden" value="${token}" id="token">
		<script src="${path}/resources/lib/jquery/jquery-3.1.1.min.js"></script>
		<script src="${path}/resources/lib/bootstrap/bootstrap.min.js"></script>
		<script src="${path}/resources/lib/layer_mobile/layer.js"></script>
		<script src="${path}/resources/js/index.js"></script>
		<script src="${path}/resources/js/referee/consummate.js"></script>

	</body>
</html>
