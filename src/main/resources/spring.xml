        <property name="url">
            <value>jdbc:mysql://114.215.136.14:3306/CCL_OES_DEV?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=true</value>  
        </property>
        <property name="username">  
            <value>CCL_OES</value>  
        </property>  
        <property name="password">  
            <value>A7301</value>  
        </property>  
    </bean>  
    
        <!-- 在jdbcTemplate模板中注入数据源 -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">  
        <property name="dataSource" ref="MydataSource"></property>     
    </bean>
</beans>