.head-w-1 {
  line-height: 60px;
  float: left;
  font-size: 24px;
  color: #FFFFFF;
}

.head-w-2 {
  line-height: 60px;
  float: left;
  font-size: 16px;
  color: #ccc;
}

.body {
  height: 415px;
  margin-top: 60px;
}

.body-l {
  float: left;
  background-color: #269ABC;
  height: 415px;
}

.body-r {
  float: right;
  height: 415px;
}

.body-r-1 {
  background: rgba(46, 32, 89, 0.6);
  border-radius: 5px 5px;
  box-shadow: 10px 10px 150px #0e0821;
  height: 190px;
  margin: 10px auto;
}

.body-r-1 a {
  color: #ccc;
  text-decoration: none;
}

.body-r-1 ul {
  list-style: none;
  text-align: center;
  font-size: 18px;
  color: #fff;
}

.body-r-1 ul li {
  margin-top: 8px;
  font-size: 16px;
  color: #ccc;
}

.body-2 {
  margin-top: 60px;
  height: 190px;
}

.body-2-p {
  float: left;
  height: 190px;
  background: rgba(46, 32, 89, 0.6);
  border-radius: 5px 5px;
  box-shadow: 10px 10px 150px #0e0821;
  margin-top: 10px;
}

.body-2-p p {
  display: block;
  font-size: 16px;
  color: #fff;
}

.body-2-p a {
  color: #fff;
  font-size: 18px;
  text-decoration: none;
}

.body-3 {
  margin-top: 60px;
