
$(document).ready(function() {
    /*layer的样式*/
    layer.config({
        skin: 'demo-class'//自定义样式demo-class
    });


    /*点击-input框变色*/
    $("#password1").focus(function () {
        $("#password1").css("background-color", "#FFFFFF");
        $("#password1").css("border", "1px solid #dddddd");
    });
    $("#password1").blur(function () {
        $("#password1").css("background-color", "#f4f4f4");
        $("#password1").css("border", "1px solid #ffffff");
    });
    $("#password2").focus(function () {
        $("#password2").css("background-color", "#FFFFFF");
        $("#password2").css("border", "1px solid #dddddd");
    });
    $("#password2").blur(function () {
        $("#password2").css("background-color", "#f4f4f4");
        $("#password2").css("border", "1px solid #ffffff");
    });
    $("#phone").focus(function () {
        $("#phone").css("background-color", "#FFFFFF");
        $("#phone").css("border", "1px solid #dddddd");
    });
    $("#phone").blur(function () {
        $("#phone").css("background-color", "#f4f4f4");
        $("#phone").css("border", "1px solid #ffffff");
    });
    $("#code").focus(function () {
        $("#code").css("background-color", "#FFFFFF");
        $("#code").css("border", "1px solid #dddddd");
    });
    $("#code").blur(function () {
        $("#code").css("background-color", "#f4f4f4");
        $("#code").css("border", "1px solid #ffffff");
    });

    /*按钮禁用*/
    $("#button").attr({"disabled": "true"});
    $("#button").css("background-color", "#eeeeee");

    $("input").keyup(function () {
        var province = $("#city").val();
        var city = $("#area").val();
        var school = $("#school").val();
        var pw = $("#password1").val();
        var pwqr = $("#password2").val();
        var phone = $("#phone").val();
        var yzm = $("#code").val();

        /*下拉框*/
        if (province == "") {
            $("#button").attr({"disabled": "true"});
            $("#button").css("background-color", "#eeeeee");
            $("#button").css("color", "#333333");
        }
        else if (city == "") {
            $("#button").attr({"disabled": "true"});
            $("#button").css("background-color", "#eeeeee");
            $("#button").css("color", "#333333");
        }
        else if (school == "") {
            $("#button").attr({"disabled": "true"});
            $("#button").css("background-color", "#eeeeee");
            $("#button").css("color", "#333333");
        }
        /*密码*/
        else if (pw == "") {
            $("#button").attr({"disabled": "true"});
            $("#button").css("background-color", "#eeeeee");
            $("#button").css("color", "#333333");
        }
        else if (pwqr == "") {
            $("#button").attr({"disabled": "true"});
            $("#button").css("background-color", "#eeeeee");
            $("#button").css("color", "#333333");
        }
        else if (phone == "") {
            $("#button").attr({"disabled": "true"});
            $("#button").css("background-color", "#eeeeee");
            $("#button").css("color", "#333333");
        }
        else if (yzm == "") {
            $("#button").attr({"disabled": "true"});
            $("#button").css("background-color", "#eeeeee");
            $("#button").css("color", "#333333");
        }
        else {
            $("#button").removeAttr("disabled");
            $("#button").css("background-color", "#01901c");
            $("#button").css("color", "#eeeeee");
        }
    });
});











