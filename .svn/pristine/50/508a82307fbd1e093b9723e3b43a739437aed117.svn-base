/* 表格*/
.table th, .table td{
	text-align: center;
	vertical-align: middle !important;
}
.table > thead > tr > th,
.table > tbody > tr > th,
.table > tfoot > tr > th,
.table > thead > tr > td,
.table > tbody > tr > td,
.table > tfoot > tr > td {
  padding: 0px;
  line-height: 1.42857143;
  vertical-align: top;
  border-top: 1px solid #ddd;
}
