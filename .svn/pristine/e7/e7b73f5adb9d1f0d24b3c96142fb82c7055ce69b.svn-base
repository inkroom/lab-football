<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<!--底部-->
<div class="bottom_box" >
    <div class="tab_bar" id="index" onclick="document.location.href='${pageContext.request.contextPath}/referee/index';">
        <img src="${pageContext.request.contextPath}/resources/img/index${pageContext.request.getRequestURI().contains('index')?'-on':''}.png" />
        <p style="${pageContext.request.getRequestURI().contains('index')?'color: #5496F9':''}">后台首页</p>
    </div>
    <div class="tab_bar ${pageContext.request.getRequestURI().contains('test')?'choose':''}" id="identity" onclick="document.location.href='${pageContext.request.contextPath}/referee/check';">
        <img src="${pageContext.request.contextPath}/resources/img/identity${pageContext.request.getRequestURI().contains('test')?'-on':''}.png"/>
        <p style="${pageContext.request.getRequestURI().contains('test')?'color: #5496F9':''}">入场验证</p>
    </div>
    <div class="tab_bar ${pageContext.request.getRequestURI().contains('qrCode')?'choose':''}" id="QRcode" onclick="document.location.href='${pageContext.request.contextPath}/referee/QRcode';">
        <img src="${pageContext.request.contextPath}/resources/img/QRCode${pageContext.request.getRequestURI().contains('qrCode')?'-on':''}.png"/>
        <p style="${pageContext.request.getRequestURI().contains('qrCode')?'color: #5496F9':''}">二维码</p>
    </div>
    <div class="tab_bar ${pageContext.request.getRequestURI().contains('score')?'choose':''}" id="revisel" onclick="document.location.href='${pageContext.request.contextPath}/referee/score';">
        <img src="${pageContext.request.contextPath}/resources/img/revise${pageContext.request.getRequestURI().contains('score')?'-on':''}.png"/>
        <p style="${pageContext.request.getRequestURI().contains('score')?'color: #5496F9':''}">修改比分</p>
    </div>
</div>
<input type="hidden" value="${token}" id="token">
