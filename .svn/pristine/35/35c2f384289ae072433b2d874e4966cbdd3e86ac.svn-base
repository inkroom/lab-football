/* 常规赛比分*/
[class *= col-]{
	padding-right: 0px;
	padding-left: 0px;	  
}
/*输入框*/
.input-score{
	width: 20px;
	border-bottom: thin solid #000000;
}
.input-write{
	width: 80%;
	border-bottom: 1px solid #000000;
}
/* 表格*/
.table th, .table td{
	text-align: center;
	vertical-align: middle !important;
}
.table > thead > tr > th,
.table > tbody > tr > th,
.table > tfoot > tr > th,
.table > thead > tr > td,
.table > tbody > tr > td,
.table > tfoot > tr > td {
  padding: 0px;
  line-height: 1.42857143;
  vertical-align: top;
  border-top: 1px solid #ddd;
}
.add-page{
	width: 80%; 
	display: none; 
	position: fixed;
	top: 50%; 
	left: 10%; 
	transform: translate(0,-50%);
	z-index: 999;
}
.show-hide{
	display: block;
}
#mask{
	background: #000000;
	opacity: 0.45;
	position: absolute;
	left: 0;
	top: 0;
}
