* {
    padding: 0;
    margin: 0;
}

.container {
    padding: 0;
}

/* 导航栏
 2018/03/18*/
.nav-bg {
    background-color: rgba(57,121,263,0.5);
    height: 60px;
    margin: 0;
}

.nav-b {
    font-size: 32px;
    line-height: 60px;
}

.logo-w {
    padding: 0;
    float: left;
    /*	background-color: #2AABD2;*/
}

.logo-w img {
    height: 60px;
    width: 60px;
}

.logo-w span {
    font-size: 18px;
    color: #ff4f46;
}

.logo-w span a {
    color: #fff;
    text-decoration: none;
}

.nav-w ul li {
    text-align: center;
    float: left;
    width: 20%;
    line-height: 60px;
    list-style: none;
}

.nav-w ul li a {
    color: #999;
}

.nav-w ul li:hover {
    border-left: #e2374d 2px solid;
    color: #6577ff;
    background-color: #3e3e59;
    text-align: center;
    transform: skew(-30deg);
    -webkit-transform: skew(-30deg);
    -moz-transform: skew(-30deg);
    -o-transform: skew(-30deg);
    -ms-transform: skew(-30deg);
}

.nav-w ul li:hover a {
    font-size: 16px;
    color: #6577ff;
    text-decoration: none;
}
