* {
    padding: 0;
    margin: 0;
}

.container {
    padding: 0;
}

/* 导航栏
 2018/03/18*/
.nav-bg {
    background-color: #080615;
    height: 60px;
    margin: 0;
}

.nav-b {
    font-size: 32px;
    line-height: 60px;
}

.logo-w {
    padding: 0;
    float: left;
    /*	background-color: #2AABD2;*/
}

.logo-w img {
    height: 60px;
    width: 60px;
}

.logo-w span {
    font-size: 18px;
    color: #fff;
}

.logo-w span a {
    color: #fff;
    text-decoration: none;
}

.nav-w ul li {
    text-align: center;
    float: left;
    width: 20%;
    line-height: 60px;
    list-style: none;
}

.nav-w ul li a {
    color: #999;
}

.nav-w ul li:hover {
    border-left: #e2374d 2px solid;
    color: #fff;
    background-color: #3e3e59;
    text-align: center;
    transform: skew(-30deg);
    -webkit-transform: skew(-30deg);
    -moz-transform: skew(-30deg);
    -o-transform: skew(-30deg);
    -ms-transform: skew(-30deg);
}

.nav-w ul li:hover a {
    font-size: 16px;
    color: #fff;
    text-decoration: none;
}

/*首页
 2018/03/18*/

.hp-bg {
    background-image: url(../../img/match/背景-1.png);
    height: 3000px;
}

.head {
    height: 60px;
}

.head-w-1 {
    line-height: 60px;
    float: left;
    font-size: 24px;
    color: #FFFFFF;
}

.head-w-2 {
    line-height: 60px;
    float: left;
    font-size: 16px;
    color: #ccc;
}

.body {
    height: 415px;
    margin-top: 60px;
}

.body-l {
    float: left;
    background-color: #0d1604;
    height: 415px;
}

.body-r {
    float: right;
    height: 415px;
}

.body-r-1 {
    background: rgba(5, 7, 4, 0.6);
    border-radius: 5px 5px;
    box-shadow: 10px 10px 150px #070c02;
    height: 190px;
}

.body-r-1 a {
    color: #ccc;
    text-decoration: none;
}

.body-r-1 ul {
    list-style: none;
    text-align: center;
    font-size: 18px;
    color: #fff;
}

.body-r-1 ul li {
    margin-top: 8px;
    font-size: 16px;
    color: #ccc;
}

.body-2 {
    margin-top: 60px;
    height: 190px;
}

.body-2-p {
    float: left;
    height: 190px;
    background: rgba(5, 7, 4, 0.6);
    border-radius: 5px 5px;
    box-shadow: 10px 10px 150px #070c02;
    margin-top: 10px;
}

.body-2-p p {
    display: block;
    font-size: 16px;
    color: #fff;
}

.body-2-p a {
    color: #fff;
    font-size: 18px;
    text-decoration: none;
}

.body-3 {
    margin-top: 60px;
    height: 610px;
    background-color: rgba(17, 12, 27, 0.62);
    color: #fff;
    text-align: center;
    font-size: 17px;
}

.body-3 input {
    width: 23%;
    float: left;
    margin-top: 42px;
    margin-left: 41.2%;
    margin-right: 3%;
}

.body-3 button {
    float: left;
    margin-top: 42px;
}

.body-3 table {
    margin-top: 100px;
}

.body-3 table th {
    text-align: center;
}

.body-3 .pag a {
    background-color: transparent;
    border: none;
    color: #fff;
}

.body-4 {
    margin-top: 60px;
    height: 350px;
    background-color: rgba(17, 12, 27, 0.62);
    color: #fff;
    font-size: 17px;
}

.body-4-k {
    height: 30px;
}

.body-4-w {
    margin: 0 4%;
}

