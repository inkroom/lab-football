<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<c:set var="path" value="${pageContext.request.contextPath}"/>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1.0, user-scalable=0">
    <title>测试</title>
    <link rel="stylesheet" type="text/css" href="${path}/resources/lib/bootstrap/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="${path}/resources/css/referee/public.css"/>
    <link rel="stylesheet" type="text/css" href="${path}/resources/css/live/liveMobile.css"/>
</head>

<body>
<div id="box">
    <div id="header">
        <nav class="nav-bg navbar">
            <div class="container">
                <div class="logo-w col-lg-4 col-md-5 col-sm-11 col-xs-12">
                    <img src="${path}/resources/img/logo.png"/>
                    <span>四川省青少年校园足球信息网</span>
                </div>
            </div>
        </nav>
    </div>

    <!--直播比分-->
    <div id="middle">
        <div class="middle-back">
            <div class="row font-size1">
                <div class="col-xs-6 text-right">比赛进程：</div>
                <div class="col-xs-6" id="status">${(info.scheduleInformation.status eq 2)?'比赛已结束':'正在比赛'}</div>
            </div>
            <div class="row text-center">
                <div class="col-xs-5 font-size1">
                    ${info.teamB.name}
                </div>
                <div class="col-xs-2 ">
                    <img class="img-size" src="${path}/resources/img/PK.png"/>
                </div>
                <div class="col-xs-5 img-right font-size1">
                    ${info.teamB.name}
                </div>
            </div>
            <div class="row text-center">
                <div class="col-xs-5 font-size1" id="scoreA">${info.scheduleInformation.goalA}</div>
                <div class="col-xs-2 font-size1">：</div>
                <div class="col-xs-5 font-size1" id="scoreB">${info.scheduleInformation.goalB}</div>
            </div>
        </div>
    </div>

    <div id="main">
        <div class="panel panel-info" id="wrap">
            <%--<div class="panel-heading text-center">--%>
            <%--<h3 class="panel-title">实时直播</h3>--%>
            <%--</div>--%>
            <div class="panel-body body-height" style="overflow-x: hidden;border-bottom: none;">
                <div class="container" id="messages">
                    <fmt:bundle basename="properties.upload">
                        <c:forEach var="item" items="${messages}">
                            <div class="div-border">
                                <div class="row">
                                    <div class="col-xs-6 text-right">${item.phone}</div>
                                    <div class="col-xs-6"><fmt:formatDate value="${item.time}"
                                                                          pattern="HH:mm:ss"/></div>
                                </div>
                                <div class="row">
                                    <c:if test="${!empty (item.imgPath)}">
                                        <div class="col-xs-4 col-left">
                                            <div>
                                                <img class="float" src="${path}/<fmt:message key="upload.image.url.prefix"/>/${item.imgPath}"/>
                                            </div>
                                        </div>
                                        <div class="col-xs-8 col-right">
                                            <p class="text-style">${item.content}</p>
                                        </div>
                                    </c:if>
                                    <c:if test="${empty item.imgPath}">
                                        <div class="col-xs-12 col-right">
                                            <p class="text-style">${item.content}</p>
                                        </div>
                                    </c:if>
                                </div>
                            </div>
                        </c:forEach>
                    </fmt:bundle>
                    <div id="hash"></div>
                    <div id="nextB" style="display: none;"></div>
                </div>
            </div>
        </div>
    </div>
    <div id="footer" style="${empty(sessionScope.get('live_phone'))?'':'height:1rem'}">
        <c:if test="${empty(sessionScope.get('live_phone'))}">
            <div class="limit div-style">
                <input class="uninput" type="text" disabled="disabled" placeholder="只有手机认证的用户,才可以参与评论"/>
                <input class="btn btn-success btn-md radius center-block panel-distance btn-con unbutton" type="button"
                       onclick="location.href='../verification'" value="认证">
            </div>
        </c:if>
        <c:if test="${!empty(sessionScope.get('live_phone'))}">
            <div class="ident undiv" style="visibility: visible">
                <form role="form" class="form-style" style="" onsubmit="return false;">
                    <div class="form-group style1">
                        <div class="style2" id="idEdit" contenteditable="true" placeholder="可以参与评论"></div>
                    </div>
                </form>
                <div id="buttons">

                    <input class="btn btn-info btn-xs radius center-block panel-distance img-height" type="button"
                           id="img" value="图片">
                    <input class="btn btn-success btn-xs radius center-block panel-distance btn-height" id="send"
                           type="button"
                           value="发送">
                </div>
            </div>
        </c:if>
        <fmt:bundle basename="properties.upload">
            <input type="hidden" value="<fmt:message key="upload.image.url.prefix"/>" id="prefix">
        </fmt:bundle>

    </div>
</div>
<script src="${path}/resources/lib/jquery/jquery-3.1.1.min.js"></script>
<script src="${path}/resources/lib/layer_mobile/layer.js"></script>
<script src="${path}/resources/js/index.js"></script>
<script src="${path}/resources/lib/ajaxFileUpload.js"></script>
<script src="${path}/resources/js/live/liveMobile.js"></script>
</body>

</html>	
