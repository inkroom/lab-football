
* {
    padding: 0;
    margin: 0;
}

.container {
    padding: 0;
}
.nav-bg{
    background-color: rgb(27, 173, 131);
    height: 60px;
    margin:0;
    color: #fff;
}
.nav-b{
    font-size: 32px;
    line-height: 60px;
}
.logo-w{
    padding: 0;
    float: left;
    /*	background-color: #2AABD2;*/
}
.logo-w img{
    height: 60px;
    width: 60px;
}
.logo-w span{
    font-size: 18px;
    color: #fff;
}
.nav-w ul li{
    text-align: center;
    float: left;
    width: 60px;
    margin-left: 20px;
    line-height: 60px;
    list-style: none;
    cursor: pointer;
}
.nav-w ul li a{
    color: #fff;
}
.nav-w ul li:hover{
    text-align: center;
}
.nav-w ul li:hover a{
    color: #87efd1;
    text-decoration: none;
}
.move {
    height: 4px;
    width: 60px;
    border-top: 4px solid #87efd1; /*只需要将上边显示出来*/
    position: absolute;
    left: 15px;
    top: 0;
    transition: left .3s ease-out 0s;/*包含四个过度属性：执行变换属性、执行时间、速率、延迟*/
    -webkit-transition: left .3s ease-out 0s;/*chrome和safari*/
    -moz-transition: left .3s ease-out 0s;/*firefox*/
    -o-transition: left .3s ease-out 0s;/*opera*/
}

li:nth-child(1):hover ~ .move { /*li元素的父元素的第一个子元素，当鼠标停留其上时，move元素的left属性改变，活动区间80px*/
    left: 15px !important;
}
li:nth-child(2):hover~ .move{
    left: 95px !important;
}
li:nth-child(3):hover~ .move{
    left: 175px !important;
}
li:nth-child(4):hover~ .move{
    left: 255px !important;
}


