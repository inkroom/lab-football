* {
  padding: 0;
  margin: 0;
}

.container {
  padding: 0;
}

/* 导航栏
 2018/03/18*/

.nav-bg {
  background-color: #080615;
  font-size: 16px;
  height: 60px;
  margin: 0;
}

.logo-w {
  padding: 0;
  float: left;
  /*	background-color: #2AABD2;*/
}

.logo-w img {
  height: 60px;
  width: 60px;
}

.logo-w span {
  font-size: 18px;
  color: #fff;
}

.nav-b-1 button {
  padding: 0;
  margin: 10px 0;
  background-color: #3e3e59;
  color: #FFFFFF;
  width: 60px;
  height: 40px;
}

.nav-w ul li {
  text-align: center;
  float: left;
  width: 20%;
  line-height: 60px;
  list-style: none;
}

.nav-w ul li a {
  color: #999;
}

.nav-w ul li:hover {
  border-left: #e2374d 2px solid;
  color: #fff;
  background-color: #3e3e59;
  text-align: center;
  transform: skew(-30deg);
  -webkit-transform: skew(-30deg);
  -moz-transform: skew(-30deg);
  -o-transform: skew(-30deg);
  -ms-transform: skew(-30deg);
}

.nav-w ul li:hover a {
  font-size: 16px;
  color: #fff;
  text-decoration: none;
}

/*首页
 2018/03/18*/

.hp-bg {
  background-image: url(../img/背景.png);
  height: 1650px;
}

.head {
  height: 60px;
}

.head-w-1 {
  line-height: 60px;
  float: left;
  font-size: 24px;
  color: #FFFFFF;
}

.head-w-2 {
  line-height: 60px;
  float: left;
  font-size: 16px;
  color: #ccc;
}

.body {
  height: 415px;
  margin-top: 60px;
}

.body-l {
  float: left;
  background-color: #269ABC;
  height: 415px;
}

.body-r {
  float: right;
  height: 415px;
}

.body-r-1 {
  background: rgba(46, 32, 89, 0.6);
  border-radius: 5px 5px;
  box-shadow: 10px 10px 150px #0e0821;
  height: 190px;
  margin: 10px auto;
}

.body-r-1 a {
  color: #ccc;
  text-decoration: none;
}

.body-r-1 ul {
  list-style: none;
  text-align: center;
  font-size: 18px;
  color: #fff;
}

.body-r-1 ul li {
  margin-top: 8px;
  font-size: 16px;
  color: #ccc;
}

.body-2 {
  margin-top: 60px;
  height: 190px;
}

.body-2-p {
  float: left;
  height: 190px;
  background: rgba(46, 32, 89, 0.6);
  border-radius: 5px 5px;
  box-shadow: 10px 10px 150px #0e0821;
  margin-top: 10px;
}

.body-2-p p {
  display: block;
  font-size: 16px;
  color: #fff;
}

.body-2-p a {
  color: #fff;
  font-size: 18px;
  text-decoration: none;
}

.body-3 {
  margin-top: 60px;
  height: 610px;
  background-color: #150c26;
  color: #fff;
  text-align: center;
  font-size: 16px;
}

