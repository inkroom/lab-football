.show-hide{
	display: block;
}
#mask{
	background: #000000;
	opacity: 0.45;
	position: absolute;
	left: 0;
	top: 0;
}
html, body, #box {
	height:100%;
}
body {
	text-align:center;
}
#box {
	text-align:left;
	display:table;
	width:100%;
	margin:0 auto;
	position:relative;
}
#box > div {
	display:table-row;
}
#header{
	height:50px;
	vertical-align:bottom;
}
#middle{
	height:70px;
	vertical-align:bottom;
}
#footer {
	height:10px;
	vertical-align:bottom;
}
#main #wrap {
	margin-bottom: 200px;
	display:table-cell;
	vertical-align:middle;
}
.body-height{
	overflow-y:scroll;
	height: 100%;
}
.table th, .table td{
	text-align: center;
	vertical-align: middle !important;
	border-bottom: none !important;
}
.table th{
	color: #aaa;
}

textarea{
	outline: none;
	border-color: #EEEEEE !important;
}
input, select{
	outline: none;
}
.margin-top1{
	margin-top: 20px;
}
.margin-top2{
	margin-top: 8px;
}
.margin-top3{
	margin-top: 10px;
}
.margin-top4{
	margin-top: -10px;
}
.margin-top5{
	margin-top: 15px;
}
.margin{
	margin: 15px 0;
}
.font-size1{
	font-size: 20px;
}
.font-size2{
	font-size: 15px;
}
.font-size3{
	font-size: 17px;
}
.font-size4{
	font-size: 16px;
}
.color1{
	color: #aaa;
}
.color2{
	color: #333;
}
.color3{
	color: red;
}
.none-padding{
	padding: 0 0;
}
.margin-left1{
	margin-left: 15px;
}
.margin-left2{
	margin-left: 30px;
}
.margin-left3{
	margin-left: 10px;
}
.img-style1{
	width: 30px;
	margin-top: -10px;
	margin-right: 15px;
}
.font-weight{
	font-weight: 600;
}
.bor-bottom{
	border: #eee 1px solid;
}
.width1{
	width: 100%;
}
.select-style1{
	height: 30px;
	width: 30%;
}
.select-style2{
	width: 45%;
	height: 30px;
}
.input-style1{
	width: 30%;
	height: 45px;
	font-size: 16px;
}
.div-style1{
	width:80%;
	background:#FFFFFF;
	display:none;
	border-radius: 10px;
	position: fixed;
	top: 50%;
	left:10%;
	transform: translate(0,-50%);
	z-index: 999;
}
.div-style2{
	visibility: hidden;
}
