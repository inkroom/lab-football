            boolean idcard = coach.getIdcard().matches("[0-9]+");
            boolean phone = coach.getPhone().matches("[0-9]+");
            if (idcard == true && phone == true && file != null) {
//                String result = uploadService.upload(file, request);
//                coach.setPhoto(result);
                System.out.println(file.getOriginalFilename());
                System.out.println(coach);
                coachService.addCoach(coach);
                return new MessageDto(Result.SUCCESS);
            }
        }
        return new MessageDto(Result.FAIL);
    }

