@Controller
@RequestMapping("/coach/")
public class CoachController {

    @Autowired
    public CoachService coachService;

    @Autowired
    private HttpServletRequest request;

    @Autowired
    private UploadService uploadService;


    //向前端返回全部教练信息并跳转至“全部教练页”(用学校id读取这个学校的全部教练)
    @RequestMapping(value = "getAllCoach/{org_id}&{status}", method = RequestMethod.GET)
    public String getAllCoach(@PathVariable("org_id") Integer org_id, @PathVariable("status") Integer state, Model model) {

        model.addAttribute("allCoach", coachService.getAllCoach(org_id, state));
        model.addAttribute("org_id", org_id);
        return "coach/coach_list";
    }

    //向前端返回单个教练信息并跳转至“教练具体信息页”（用教练id获取这个教练的全部信息）
    @RequestMapping(value = "getCoach/{id_coach}", method = RequestMethod.GET)
    public String getCoach(@PathVariable("id_coach") Integer id_coach, Model model) {
        model.addAttribute("coach", coachService.getCoach(id_coach));
        model.addAttribute("coachTeam", coachService.getAllTeamByCoach(id_coach));
        return "coach/coach_info";
    }

