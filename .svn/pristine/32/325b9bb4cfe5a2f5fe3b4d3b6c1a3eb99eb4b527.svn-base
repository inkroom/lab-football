<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nsu.dao.student.practice.PracticeDao">

    <select id="getAllQuestion" statementType="PREPARED" resultType="java.util.ArrayList">
      SELECT P_ID AS id,PROBLEM AS content,"SELECT" AS choice,
      "VALUE" AS score,ANSWER
      FROM problem AS p
      WHERE TYPE=#{type} AND LEVEL=#{difficulty}
      AND OBJECT =#{subject} AND STATUS=1
    </select>

    <update id="commit" statementType="PREPARED">
        UPDATE student
        <set>
            <if test="isRight">
                INTEGRAL=INTEGRAL+#{score},
            </if>
            DO_NO=DO_NO+1,
            OPER_BY='PanXiaoyu',
            OPER_DATE=now()
        </set>
        WHERE student.S_ID = #{studentId}
    </update>

    <select id="getOneQuestion" statementType="PREPARED" resultType="com.nsu.bean.student.exercise.QuestionBean">
        SELECT P_ID AS id,PROBLEM AS content,"SELECT" AS choice,
        "VALUE" AS score,ANSWER
        FROM problem AS p
        WHERE P_ID=${id}
    </select>

</mapper>