
.container {
    padding: 0;
}
.nav-bg{
    background-color: rgba(199,217,243,1);
    height: 60px;
    margin:0;
}
.nav-b{
    font-size: 32px;
    line-height: 60px;
}
.logo-w{
    padding: 0;
    float: left;
    /*	background-color: #2AABD2;*/
}
.logo-w img{
    height: 60px;
    width: 60px;
}
.logo-w span{
    font-size: 17px;
    color: #669;
}
.logo-w span a{
    color: #669;
    text-decoration: none;
}

.nav-w ul li{
    text-align: center;
    float: left;
    width: 80px;
    margin-left: 40px;
    line-height: 60px;
    list-style: none;
    cursor: pointer;
}
.nav-w ul li a{
    color: #669;
}
.nav-w ul li:hover{
    text-align: center;
}
.nav-w ul li:hover a{
    color: #339;
    text-decoration: none;
}
.move{
    height: 4px;
    width: 60px;
    border-top: 4px solid #339;/*只需要将上边显示出来*/
    position: absolute;
    left: 20px;
    top: 0;
    transition: left .3s ease-out 0s;/*包含四个过度属性：执行变换属性、执行时间、速率、延迟*/
    -webkit-transition: left .3s ease-out 0s;/*chrome和safari*/
    -moz-transition: left .3s ease-out 0s;/*firefox*/
    -o-transition: left .3s ease-out 0s;/*opera*/
}
li:nth-child(1):hover~ .move{    /*li元素的父元素的第一个子元素，当鼠标停留其上时，move元素的left属性改变，活动区间120px*/
    left: 20px;
}
li:nth-child(2):hover~ .move{
    left: 140px;
}
li:nth-child(3):hover~ .move{
    left: 260px;
}
li:nth-child(4):hover~ .move{
    left: 380px;
}

.nav-w ul li .ul-1 li {
    display: none;
    height: 40px;
    width: 80px;
    /*background-color: rgba(199,217,243,1);*/
    line-height: 40px;
    position: absolute;
    /*left: 0;*/
    top: 11px;
    z-index: 999;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.nav-w ul li .ul-2 li{
    display: none;
    height: 40px;
    /*background-color: rgba(199,217,243,1);*/
    line-height: 40px;
    position: absolute;
    left: 140px;
    top: -90px;
    z-index: 999;
    /*overflow: hidden;*/
}
.nav-w ul li ul li a{
    color: #669;
}
.nav-w ul li:hover ul li{
    display: block;
}
.nav-w ul li:hover ul li a{
    color: #669;
}
