
$(function () {
    $('#submit').click(function () {
        var name = $('#username').val();
        var pass = $('#password').val();
        if(name==='' ){
            $('#msg').html('请输入用户名').removeClass('invisible');
            return;
        }else if (pass===''){
            $('#msg').html('请输入密码').removeClass('invisible');
            return;
        }

        ajax({
            url:'',
            data:{
                username:name,
                password:pass,
                isRemeber:$('#isRemeber').is(':selected'),
                isAuto:$('#isAuto').is(':selected'),
                token:$('#token').val()
            },
            dataType:'json',
            type:'post',
            success:function (result) {
                switch (result.status){
                    case 0:
                        $('#msg').html('登录成功').removeClass('invisible');
                        break;
                    case 1:
                        $('#msg').html('账号或密码错误').removeClass('invisible');
                }
            },
            error:function () {
                $('#msg').html('网络错误').removeClass('invisible');
            }
        })
    })
})