    $(document).ready(function(){


        $("#tsk").fadeTo(1,0);
        $("#password1").blur(function(){
        var pw_len = $("#password1").val().length;
        if(pw_len < 6)
        {
        $("#tsk").fadeTo(1,1);
        }
        else if(pw_len >20)
        {
        $("#tsk").fadeTo(1,1);
        }
        else{
        $("#tsk").fadeTo(1,0);
        }
        });
       ;

        $("#qrts").fadeTo(1,0);
        $("#password2").blur(function(){
            var pw = $("#password1").val();
            var pwqr =$("#password2").val();
            var pwqr_len=$("#password2").val().length;
            if(pw == pwqr){
                if(pwqr_len < 6){
                    $("#qrts").fadeTo(1,1);
                }
                else{
                    $("#qrts").fadeTo(1,0);
                }

            }

            else{
                $("#qrts").fadeTo(1,1);
            }
        });

        $("#sfts").fadeTo(1,0);
        $("#number").blur(function(){
        var sfz_len = $("#number").val().length;
        /*正则判定是否是字母*/
        var reg1 = /^[A-Za-z]+$/;
        var val1 = $("#number").val();
        /*正则判定结尾是否字母*/
        var reg2 = /[A-Za-z]+$/;
        /* var val2 = $("#number").val();*/
        if(sfz_len < 18)
        {
        $("#sfts").fadeTo(1,1);
        }
        else if(sfz_len >18)
        {
        $("#sfts").fadeTo(1,1);
        }
        else if(sfz_len =18){
        $("#sfts").fadeTo(1,0);
        }

        else if(reg1.test(val1)){
        $("#sfts").fadeTo(1,1);
        }
        else if(reg2.test(val1)){
        $("#sfts").fadeTo(1,0);
        }
        else{
        $("#sfts").fadeTo(1,1);
        }
        });


        $("#yhmts").fadeTo(1,0);
        $("#yhm").blur(function(){
        var yhm = $("#yhm").val();
        if(yhm ==""){
        $("#yhmts").fadeTo(1,1);
        }
        else{
        $("#yhmts").fadeTo(1,0);
        }
        })


        $("#yhmts").fadeTo(1,0);
        $("#yhm").blur(function(){
        var yhm = $("#yhm").val();
        if(yhm ==""){
        $("#yhmts").fadeTo(1,1);
        }
        else if(yhm.length <6){
            $("#yhmts").fadeTo(1,1);
        }
        else{
        $("#yhmts").fadeTo(1,0);
        }
        })


        $("#bjts").fadeTo(1,0);
        $("#class").blur(function(){

            /*正则是否包含字母*/
            var reg3 = /[A-Za-z]+/;
            var val3 = $("#class").val();
            if(val3 == ""){
                $("#bjts").fadeTo(1,1);
            }
            else if(reg3.test(val3)){
                $("#bjts").fadeTo(1,1);
            }
            else{
                $("#bjts").fadeTo(1,0);}

        });

        });



