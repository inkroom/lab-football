<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="path" value="${pageContext.request.contextPath}"/>
<!DOCTYPE html>
<html>
<head>
    <title>球员登录</title>
    <link rel="stylesheet" type="text/css" href="${path}/resources/lib/bootstrap/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="${path}/resources/css/player/style.1.0.css"/>

</head>
<body>
<div class="cs-bg">
    <form class="container">
        <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
                <div class="login_bg text-center">
                    <!--注册面板标题-->
                    <br>
                    <div class="logo-w2 col-xs-10 col-xs-offset-1 form-group">
                        <!--<img src="img/logo足球项目组.png">-->
                        <span class="title" style="color: green; font-size: 25px;">四川省青少年足球信息化</span>
                    </div>
                    <div class="logo-w2 col-xs-10 col-xs-offset-1 form-group">
                        <span class="title" style="color: green; font-size: 22px;">————球员登录————</span>
                    </div>
                    <!--注册面板表单-->
                    <div class="form-horizontal" role="form">
                        <!--用户名-->
                        <div class="input-icon-group">
                            <div class="col-xs-8 col-xs-offset-2 input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </span>
                                <div class="change_margin_1 input-group" style="width: 100%;">
                                    <input id="username"  class="user form-control"  placeholder="请输入用户名：6-12位数字或字母" minlength="6" maxlength="12" type="text">
                                </div>
                            </div>

                        </div>
                        <br>

                        <!--输入密码-->
                        <div class="input-icon-group">
                            <div class="col-xs-8 col-xs-offset-2 input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                <div class="input-group" style="width: 100%">
                                    <input id="password" class="form-control"   placeholder="请输入密码：6-20位数字或字母" minlength="6" maxlength="20" type="password" >
                                </div>
                                <div class="col-xs-2">
                                    <span class="passwordInfo"></span>
                                </div>
                            </div>

                        </div>
                        <br>

                        <!--验证码-->
                        <div class="input-icon-group " >
                            <div class="col-xs-4 col-xs-offset-2 input-group" style="float: left">
                                <div class="input-group" style="width: 100%;padding-bottom: 16px;">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-qrcode"></span></span>
                                    <input id="code" class="form-control" placeholder="验证码" maxlength="6" minlength="6" type="text" >
                                </div>
                            </div>
                            <div style="float: left ;width: 30%;height: 34px;margin-left: 10px; cursor:pointer" class="col-xs-4">
                                <!--验证码图片-->
                                <img src="${path}/imageCode" id="imagecode" onclick="getCode()" title="点击图片刷新验证码">
                            </div>
                        </div>
                        <br>
                        <!--登录按钮-->
                        <div class="form-group">
                            <div class="col-xs-8 col-xs-offset-2">
                                <button id="button" type="button" class="btn1 btn-success form-group" onclick="reg();return false;">登录</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
    <input type="hidden" id="token" value="${token}">
</div>
<script src="${path}/resources/lib/jquery/jquery-3.1.1.min.js"></script>
<script src="${path}/resources/lib/jquery/jquery-1.11.3.js"></script>
<script src="${path}/resources/lib/bootstrap/bootstrap.min.js"></script>
<script src="${path}/resources/lib/layer/layer.js"></script>
<script src="${path}/resources/js/index.js"></script>
<script type="text/javascript">
    function checkInput(){
        var username = $("#username").val();
        var password = $("#password").val();
        var imagecode =$("#code").val();
        /*正则-数字字母*/
        var reg = /^[0-9a-zA-Z]+$/;
        /*用户名判定*/
        if(username =="")
        {
            layer.msg('用户名不能为空');
            return  false;
        }
        else if(!reg.test(username)){
            layer.msg('用户名存在非法字符');
            return false;
        }
        else if(username.length<6)
        {
            layer.msg('用户名位数不足');
            return false;
        }
        /*密码判定*/
        else if(password =="")
        {
            layer.msg('密码不能为空');
            return false;
        }
        else if(password.length <6)
        {
            layer.msg('密码位数不足');
            return false;
        }
        else if(!reg.test(password))
        {
            layer.msg('密码含有非法字符');
            return false;
        }
        /*验证码判定*/
        else if(imagecode=="")
        {
            layer.msg('验证码不能为空');
            return false;
        }
        else if(imagecode.length<6)
        {
            layer.msg('验证码位数不足');
            return false;
        }
        return true;
    }
     function doSubmit() {
        ajax({
            type: "POST",   //提交的方法
            url:"${path}/player/login", //提交的地址
            data:{
                username:$("#username").val(),
                password:$("#password").val(),
                imagecode:$("#code").val(),
                token: $('#token').val()
            },
            dataType:'json',
            success: function(data) {  //成功
                //就将返回的数据显示出来
                switch (data.status) {
                    case 0:
                        layer.msg("登录成功，即将跳转进入下一页面");
                        setTimeout(function () {
                            window.location.href="${path}/player/list";
                        },2000);

                        break;
                    case 1:
                        layer.msg("用户名或密码输入错误");
                        break;
                    case 8:
                        layer.msg("用户名或密码不能为空");
                        break;
                    case 12:
                        layer.msg("验证码输入错误");
                        break;
                    case 21:
                        layer.msg("非法字符、位数、格式或其他错误");
                        break;
                }
            },
            error: function() {  //失败的话
                msg("请求错误");
            }
        });
    }
    function reg(){
        if(this.checkInput()){
            doSubmit();
        }
    }
    function getCode()
    {
        $("#code").val("");
        $("#imagecode").attr('src',"${path}/imageCode?abc="+Math.random())//MAth.random是为了避免缓冲

    }
</script>
</body>

</html>
