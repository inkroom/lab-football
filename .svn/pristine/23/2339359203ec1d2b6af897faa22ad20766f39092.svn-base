<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <title>后台首页</title>
    <link rel="stylesheet" href="${pageContext.request.contextPath}/resources/lib/bootstrap/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="${pageContext.request.contextPath}/resources/css/referee/public.css">
    <link rel="stylesheet" type="text/css" href="${pageContext.request.contextPath}/resources/css/referee/index.css">

</head>
<body>

<!--导航-->
<nav class="nav-bg navbar">
    <div class="container">
        <div class="logo-w col-lg-4 col-md-5 col-sm-11 col-xs-12">
            <img src="${pageContext.request.contextPath}/resources/img/logo.png"/>
            <span>四川省青少年校园足球信息网</span>
        </div>
    </div>
</nav>

<!--中间-->
<div class="container">
    <div class="row text-center">
        <div class="col-xs-12 font-color"><h1>今日赛程</h1></div>
    </div>


    <div class="row text-center">
        <div class="col-xs-8 col-xs-offset-2 col-label">
            <label class="font-size1">主队：
            </label><label class="font-size2">
            ${dto.teamA.name}
        </label>
        </div>
    </div>

    <div class="row row-img">
        <img src="${pageContext.request.contextPath}/resources/img/PK.png"/>
    </div>

    <div class="row text-center">
        <div class="col-xs-8 col-xs-offset-2 col-label">
            <label class="font-size1">客队：
            </label><label class="font-size2">
            ${dto.teamB.name}
        </label>
        </div>
    </div>
    <%----%>
    <div class="row text-center row-top">
        <div class="col-xs-2 col-xs-offset-2 text-right" style="font-size: 15px;">时间：</div>
        <div class="col-xs-6 font-size1" > <fmt:formatDate value="${dto.scheduleInformation.beginTime}" pattern="yyyy/MM/dd HH:mm"/></div>
    </div>

    <div class="row text-center row-bottom" >
        <div class="col-xs-2 col-xs-offset-2 text-right font-size1" >地点：</div>
        <div class="col-xs-6 font-size1" >${dto.scheduleInformation.place}</div>
    </div>
</div>

<jsp:include page="bar.jsp"/>
<script src="${pageContext.request.contextPath}/resources/lib/jquery/jquery-3.1.1.min.js"></script>
<script src="${pageContext.request.contextPath}/resources/lib/bootstrap/bootstrap.min.js"></script>
</html>
